{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "target": "ESNext"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
