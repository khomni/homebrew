{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "target": "ESNext"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
