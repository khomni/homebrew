{
  "compilerOptions": {
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "target": "ESNext",
    "baseUrl": "./",
    "paths": {
      "@database*": ["./src/database/models"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
