.modal-dialog
  .modal-content
    .modal-title Create a New Campaign
    .modal-body 
      form(name='campaign' action='/c/' method='post')
        .flex.vert
          .flex.vert.fill.js
            label Campaign Name
            input.form-input(type='text' required name='name')
          .flex.vert.fill.js
            label URL (Optional)
            input.form-input(type='text' name='url' placeholder="Allowed characters: a-z A-Z 0-9 _-" pattern="^[a-zA-Z0-9_-]*$" maxlength=32)
          .flex.vert.fill.js
            label System
            select.form-input(name="system")
              each name in SYSTEM.names
                option.form-input(value=name)= name
        .flex.center.pad
          a.btn(href="/login" data-click="modal") Login
          button.btn(type='submit') New Campaign
