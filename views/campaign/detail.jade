extends /layout

block title
  title= campaign.name
  
block header
  +header
    .header-item.page-title 
      span= campaign.name

block content
  .content-body
    +section('Contents')
      .flex.center.pad
        a.btn(href=campaign.url+"/characters") Characters
        a.btn(href=campaign.url+"/quests") Quests
        a.btn(href=campaign.url+"/codex") Codex
    if campaign.ownedBy(currentUser)
      section
        .section-body
          .flex.pad
            .flex.vert.border.pad
              .flex.center: label GM Actions
              .flex.center.pad
                a.btn(href=campaign.url+'/edit') Edit
                form(action=campaign.url, method="DELETE")
                  button.btn(type="submit") Delete
