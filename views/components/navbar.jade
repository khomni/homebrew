mixin navlink(options)
  case options.button
    when true
      li
        form(action=options.url method="post")&attributes(attributes)
          block if block
          button(type="submit")= options.text
    default
      li(style=options.color ? {color: options.color} :"")
        block if block
        a(href=options.url)&attributes(attributes)= options.text
        
mixin dropdown(options)
  if !block
    -attributes.class = "disabled"
  li.dropdown(data-target=options.id style=options.color ? {color: options.color} :"")&attributes(attributes)
    a.toggle(href="#")= options.text
    ul.dropdown-menu(id=options.id)
      block
  
nav#nav
  ul.navlinks
    +navlink({url:"/", text: "Home"})
    
    +filter(currentUser)
    
      //- Character Menu
      +filter(!currentUser.activeChar)
        +dropdown({id:'charselect',text:"Character"})
          +navlink({url:'/pc', text: 'Select Character'})
          +navlink({url:'/pc/create', text: 'Create a Character'})
        +dropdown({id:'campaignmenu',text:"Campaign"})
          +navlink({url:'/c', text: 'Find Campaign'})
          +navlink({url:'/c/new', text: 'Create Campaign'})(data-response="modal")
      +filter(currentUser.activeChar)
        +dropdown({id:'charactermenu', text: currentUser.activeChar.name})
          +navlink({url:'/pc/' + currentUser.activeChar.id,text:'Status'})
          +navlink({url: currentUser.activeChar.url + '/inventory',text:'Inventory'})
          +navlink({url:'/pc/' + + currentUser.activeChar.id + '/journal',text:'Journal'})
          
      //- Campaign Menu
      +filter(activeChar && !currentUser.activeChar.campaign)
        +navlink({url: '/c/', text:'Find Campaign'})
      +filter(activeChar && currentUser.activeChar.campaign)
        +dropdown({id: 'campaignmenu', text: 'Campaign'})
          +navlink({url:'/c/'+currentUser.activeChar.campaign.id+'/quests',text:'Quest'})
          +navlink({url:'/c/'+currentUser.activeChar.campaign.id+'/maps',text:'Maps'})
          
      //- Party Menu
      +filter(currentUser.activeChar && campaign && !party)
        +navlink({url: '/p', text:'Join Party'})
      +filter(party)
        +dropdown({id:'partymenu', text: 'Party'})
          each member in party
            +navlink({url:'/pc/' + member.id, text: member.name})
            
      +dropdown({id: 'accountmenu', text: 'Account'})
        +navlink({url:'/u/'+currentUser.username, text: 'Profile'})
        +navlink({url:'/settings', text: 'Settings'})
        +navlink({url:'/logout', text: 'Log Out'})
        +navlink({url:'/settings/theme', text: 'Theme'})(data-response="modal")
    +filter(!currentUser)
      +navlink({url:'/about',text:'About'})
      +dropdown({id: 'account', text:'Log In / Sign Up'})(class="signup")
        +navlink({url:'/login', text: 'Log In'})(data-response="modal")
        +navlink({url:'/signup', text: 'Sign Up'})(data-response="modal")
    +filter(currentUser)
      
