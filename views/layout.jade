include mixins/mixins
doctype html
html
  head
    block title
      title= title || "OmniCampaign"
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Lato:400,700,300'  type='text/css')
    script(src='/javascripts/main.js')
    link#favicon(rel='shortcut icon' href='/0.ico')
    meta(name='viewport', content="width=device-width, height=device-height, initial-scale=1, maximum-scale=1.0, user-scalable=no")
  body
    #modals.modals
    block navigation
      include components/navbar
    #content-wrapper
      //- .overlay
        +characterCard(activeChar)
      block header
        +header(headerColor||null)
      #content-main&attributes({class: THEME})
        //- include /components/breadcrumbs
        block content
      block footer
