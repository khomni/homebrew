.modal-dialog(data-redirect=redirect)
  .modal-content
    .modal-title= title || "Success"
    .modal-body= body      
    .modal-footer
      if links
        .btn-group
          each link in links
            a.btn(href=link.href)= link.text
script.
  (function(){
    redirect = document.querySelector('.modal-dialog').dataset.redirect
    console.log(redirect)
    if(redirect) {
      document.getElementById('mainModal').addEventListener('hide',function(e){
        window.location = redirect
      })
    }
  })()
      
