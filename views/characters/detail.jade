extends ../layout

block title
  title= character.name
  
block header
  +header
    .header-item.page-title 
      span= character.name

block content
  .content-body
    section
      .section-body
        .flex#tab-1
        .flex#tab-2
        .flex#tab-3
        .flex#tab-4
    section
      .section-body
        .flex
          a(data-click="tab" data-target="tab-1") Tab 1
          a(data-click="tab" data-target="tab-2") Tab 2
          a(data-click="tab" data-target="tab-3") Tab 3
          a(data-click="tab" data-target="tab-4") Tab 4
          
          a(href="/"+character.url+"factions", data-click="tab" data-target="tab-2") Tab 2
          a(href="/"+character.url+"inventory", data-click="tab" data-target="tab-3") Tab 3
          a(href="/"+character.url+"journal", data-click="tab" data-target="tab-4") Tab 4
    //- if character.active
    //- if !character.active
    section
      if currentUser
        .section-footer
          .flex.pad
            if character.ownedBy(currentUser)
              .flex.vert.border.pad
                .flex.center: label Owned Actions
                .flex.center.pad
                  form(action="select" method="post")
                    button.btn(disabled=character.isActiveChar(currentUser)) Select
                  a.btn(href="/"+character.url+"edit" data-response="modal") Edit
            if !character.isActiveChar(currentUser)
              .flex.vert.border.pad
                .flex.center: label Interactions
                .flex.center.pad
                  a.btn(href="/"+character.url+"relationship/new" data-response="modal") Relate
                  a.btn(href="/"+character.url+"chat" data-response="modal") Chat
                  a.btn(href="/"+character.url+"lore" data-response="modal") Lore
                  a.btn(href="/"+character.url+"inventory/give" data-response="modal") Give Items
    
