extends /layout

block title
  title #{character.getName('first')}'s Inventory
  
block header
  +header
    .header-item.page-title 
      span #{character.getName('first')}'s Inventory

block content
  .content-body
    section
      .section-body
        .flex.center
          a.btn(href="inventory/new" data-response="modal") New Item
    section
      .section-body
        .flex.fill
          table.table
            thead
              tr
                th Name
                th Value
                th Weight
                th Rarity
                th Blueprint
                th
            tbody
              each item in character.Items
                tr
                  td
                    a(href="inventory/"+item.id+"/lore" data-response="modal" data-target="item-"+item.id)= item.name
                  td= item.value
                  td= item.weight
                  td= item.rarity
                  td= item.properties.blueprint
                  td
                    .flex.je
                      a.btn(href="inventory/"+item.id+"/edit" data-response="modal" data-target="edit-item-"+item.id) Edit
                      form(action="inventory/"+item.id method="delete")
                        button.btn Delete
        
