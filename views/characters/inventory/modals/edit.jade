.modal-dialog
  .modal-content
    form(name='journal' action=character.url+'/inventory/' + (item?item.id:'') method='post')
      if !item
        .modal-title New Item
      .modal-body
        .flex.vert
          .flex.vert.center.fill
            label Item Name
            input.form-input.grow(type='text' name='name' value=item?item.name:false)
          .flex.center.fill
            .flex.vert
              label Value
              input.form-input(type='number' name='value' min=0 value=item?item.value:false)
            .flex.vert
              label Weight
              input.form-input(type='number' name='weight' min=0 step=0.1 value=item?item.weight:0)
                
          .flex.center.fill
            .flex.vert
              label Rarity
              select.form-input(name="rarity")
                option(value=0 checked=item&&item.rarity==0) Common
                option(value=1 checked=item&&item.rarity==1) Uncommon
                option(value=2 checked=item&&item.rarity==2) Rare
                option(value=3 checked=item&&item.rarity==3) Legendary
            .flex.vert
              label Blueprint
              input#blueprint-search.form-input(href="/r/system" type='text' name='blueprint' value=item?item.blueprint:false data-reaction="fill")
          textarea.form-input(type='text' name='description' height=300)=item&&item.lore?item.lore.description:""
      .modal-footer
          button.btn.block(type='submit')= entry ? 'Update Entry' : 'Add Journal Entry'
